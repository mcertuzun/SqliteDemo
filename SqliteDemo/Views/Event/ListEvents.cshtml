@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SqliteDemo.Models.Entity;
@model Events[]
<h4>Event List</h4>


     <table style="width:100%">
    <tr>
        <th>Event ID</th>
        <th>User ID</th>
        <th>Event Name</th>
        <th>Date</th>
        <th>Information</th>
        <th>Photo</th>
    </tr>
         @{if (Model == null)
             {
                 ViewBag.message = "There is not event";

             }
             else
             {
                foreach (Events events in Model)
                {
                    <tr>

                        <td>@events.EventId</td>
                        <td>@events.UserId</td>
                        <td>@events.EventName</td>

                        <td>@events.Date </td>
                        <td>@events.Information</td>

                        <td>
   <div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <a href="@events.PhotoURL">
                <img src="@events.PhotoURL" alt="Lights" style="width:100%">
                <div class="caption">
                    <p>Lorem ipsum...</p>
                </div>
            </a>
        </div>
    </div>
</div>
    
</td>
                        <td>
                            <form method="post" action="~/Event/CommentAdd">
                                        <div class="form-group">
                                            <label for="comment">Comment:</label>
                                            <textarea class="form-control"  name="textin" id="EventTextArea"></textarea>
                                        </div>
                                        <p><input value="Enter" type="submit"></p>
                            </form>
                        </td>
                    </tr>
                }
             }
        }    
   
      </table>



   
