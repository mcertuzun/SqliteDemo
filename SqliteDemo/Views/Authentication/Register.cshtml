@using SqliteDemo.Models.Entity;
@model User
@{
    ViewBag.Title = "Register";
}
<style type="text/css">
    #pp {
        color: red
    }
</style>
<h2>Register</h2>

<form action="~/Authentication/Register" method="post">
    <div class="input-group">
        Username: <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" name="Name" value="@Model.Name">
    </div> <p id="pp"> @TempData["Username"]</p>
    <div class="input-group">
        Email: <input type="text" class="form-control" placeholder="example@test.com" aria-describedby="basic-addon1" name="EmailAddress" value="@Model.EmailAddress">
    </div> <p id="pp"> @TempData["Email"]</p>
    <div class="input-group">
        Password: <input class="form-control" placeholder="Username" aria-describedby="basic-addon1" name="Password" value="@Model.Password" type="password">
    </div> <p id="pp">@TempData["Password"]</p>
    <button type="submit" value="Register" name="Register" class="btn btn-default">Login</button>

</form>
